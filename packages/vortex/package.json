		"management",
		"redux",
		"store",
		"reactive",
		"dependency injection",
		"react",
		"state",
		"flux"
	],
	"homepage": "https://docs-vortex.netlify.app",
	"bugs": {
		"url": "https://github.com/vega-js/vortex/issues"
	},
	"repository": {
		"type": "git",
