    "directory": "packages/vortex"
	},
	"sideEffects": false,
	"license": "MIT",
	"author": "Andrey Zlobin",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
